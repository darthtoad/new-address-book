{{#partial "content"}}
<h1>Edit address</h1>
<form action='/addressBook/{{editAddressBook.addressId}}/edit' method="post">
    <div class="form-group">
        <label for="first">First name</label>
        <input id="first" name="first" class="form-control" type="text" value="{{editAddressBook.first}}">
    </div>
    <div class="form-group">
        <label for="last">Last name</label>
        <input id="last" name="last" class="form-control" type="text" value="{{editAddressBook.last}}">
    </div>
    <div class="form-group">
        <label for="street">Street</label>
        <input id="street" name="street" class="form-control" type="text" value="{{editAddressBook.address.street}}">
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input id="city" name="city" class="form-control" type="text" value="{{editAddressBook.address.city}}">
    </div>
    <div class="form-group">
        <label for="state">State</label>
        <input id="state" name="state" class="form-control" type="text" value="{{editAddressBook.address.state}}">
    </div>
    <div class="form-group">
        <label for="country">Country</label>
        <input id="country" name="country" class="form-control" type="text" value="{{editAddressBook.address.country}}">
    </div>
    <div class="form-group">
        <label for="zip">Postal code</label>
        <input id="zip" name="zip" class="form-control" type="text" value="{{editAddressBook.address.zip}}">
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input id="phone" name="phone" class="form-control" type="text" value="{{editAddressBook.number}}">
    </div>
    <button type="submit" class="btn">Go!</button>
</form>
{{/partial}}

{{> layout.hbs}}